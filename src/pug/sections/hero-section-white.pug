section.hero-section.hero-section--white
  .container.container--md.hero-section__wrapper
    picture
      source(srcset=require('../../images/hero.webp') type="image/webp")
      img(src=require('../../images/hero.png') alt="decor").hero-section__decor.js-herosection-decor
    .hero-section__content
      .hero-section__grid
        h1.hero-section__title.js-herosection-title.
          Monetize your knowledge by helping job seekers worldwide
        p.hero-section__subtitle.js-herosection-subtitle.
          Earn money by sharing your knowledge
          and professional experience.
        a(href="#").hero-section__button.button.button--dark.button--lg.button--fluid.js-herosection-button.
          Join the team

      .social.social--adaptive.social--black.hero-section__socials.js-herosection-socials
        p.social__title Social
        ul.social__list
          li.social__item
            a(href="/").social__link
              include ../../images/svg/facebook.svg
          li.social__item
            a(href="/").social__link
              include ../../images/svg/instagram.svg
          li.social__item
            a(href="/").social__link
              include ../../images/svg/linkedIn.svg
