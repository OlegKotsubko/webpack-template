section.hero-section
  .container.container--md
    picture
      source(srcset=require('../../images/hero.webp') type="image/webp")
      img(src=require('../../images/hero.png') alt="decor").hero-section__decor
    .hero-section__content
      .hero-section__grid
        div
          h1.hero-section__title Elevate your career and get the most of your potential
        div
          p.hero-section__subtitle Use the effective tool to advance the skills, reinvent your path and get the dream job.
          a(href="#").hero-section__button.button.button--secondary.button--lg.button--fluid Get started

      .social.social--adaptive.hero-section__socials
        p.social__title Social
        ul.social__list
          li.social__item
            a(href="/").social__link
              include ../../images/svg/facebook.svg
          li.social__item
            a(href="/").social__link
              include ../../images/svg/instagram.svg
          li.social__item
            a(href="/").social__link
              include ../../images/svg/linkedIn.svg
