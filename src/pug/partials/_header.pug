header.header(aria-label="header")
  .header__logo
    a(href="/" class="header__link" id="logo" aria-label="main_logo")
      img(src=require("./images/webpack.png") width="360" height="140" alt="Main logo" aria-labelledby="logo").u-img-responsive.header__image

  .header__container
    .header__nav
      +nav

    .header__buttons
      a(href="/", class="button button--white button--h48 button--secondary header__demo") ДЕМО
      a(href="/", class="button button--h48 header__demo") ПОПРОБОВАТЬ

  .header__controls

    button(class="hamburger hamburger--slider header__hamburger js-menu-toggle", type="button", id="hamburger" aria-label="Open menu")
      span(class="hamburger-box")
        span(class="hamburger-inner")

    .language.header__language.js-dropdown-container
      button(class="language__trigger js-dropdown" type="button" aria-label="Open lang menu")
        span.language__label RU
        +icon('arrow', 'language__arrow')
      ul.language__list.js-dropdown-menu
        li.language__item
          a(href="/" class="language__button js-dropdown__item") EN
        li.language__item
          a(href="/" class="language__button") ES
        li.language__item
          a(href="/" class="language__button") TR
