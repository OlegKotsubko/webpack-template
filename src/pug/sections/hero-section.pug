section.hero-section
  .container.container--md.hero-section__wrapper
    picture
      source(srcset=require('../../images/hero.webp') type="image/webp")
      img(src=require('../../images/hero.png') alt="decor").hero-section__decor.js-herosection-decor
    .hero-section__content
      .hero-section__grid
        h1.hero-section__title.js-herosection-title.
          Elevate your career and get the most
          of your potential
        p.hero-section__subtitle.js-herosection-subtitle.
          Use the effective tool to advance the skills, reinvent your path and get the dream job.
        a(href="#").hero-section__button.button.button--secondary.button--lg.button--fluid.js-herosection-button.
          Get started

      .social.social--adaptive.hero-section__socials.js-herosection-socials
        p.social__title Social
        ul.social__list
          li.social__item
            a(href="/").social__link
              include ../../images/svg/facebook.svg
          li.social__item
            a(href="/").social__link
              include ../../images/svg/instagram.svg
          li.social__item
            a(href="/").social__link
              include ../../images/svg/linkedIn.svg
